# Environment
ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Server
API_PORT=8000
API_HOST=0.0.0.0

# MySQL Database
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=uritomo
MYSQL_USER=uritomo_user
MYSQL_PASSWORD=uritomo_pass
MYSQL_PORT=3306
DATABASE_URL=mysql+aiomysql://uritomo_user:uritomo_pass@localhost:3306/uritomo

# Redis
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0
REDIS_DB=0

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_HTTP_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_URL=http://localhost:6333

# MinIO Object Storage (Optional)
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=uritomo-transcripts
MINIO_USE_SSL=false

# Security & Authentication
JWT_SECRET_KEY=your-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# External API Keys (Optional - will use mock mode if not provided)
# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# DeepL
DEEPL_API_KEY=
DEEPL_API_URL=https://api-free.deepl.com/v2/translate

# Translation Settings
TRANSLATION_PROVIDER=MOCK  # Options: OPENAI, DEEPL, MOCK
DEFAULT_SOURCE_LANG=ja
DEFAULT_TARGET_LANG=ko
ENABLE_STREAMING=true

# Embedding Provider
EMBEDDING_PROVIDER=MOCK  # Options: OPENAI, MOCK
EMBEDDING_DIMENSION=1536

# RAG Settings
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7
CULTURE_CARDS_COLLECTION=culture_cards
GLOSSARY_COLLECTION_PREFIX=glossary_

# Explanation Settings
EXPLANATION_MAX_LENGTH=200
EXPLANATION_ENABLE_RULE_BASED=true
EXPLANATION_ENABLE_MODEL_BASED=false

# Summary Settings
SUMMARY_PROVIDER=MOCK  # Options: OPENAI, MOCK
SUMMARY_MODEL=gpt-4-turbo-preview

# Background Worker
WORKER_QUEUES=default,high,low
WORKER_RESULT_TTL=3600
WORKER_JOB_TIMEOUT=600

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Monitoring & Logging
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_EXPLANATION=true
ENABLE_SUMMARY=true
ENABLE_STORAGE=false

# Environment: development, staging, production
ENV=development
DEBUG=true

# Security (run `openssl rand -hex 32` to generate)
JWT_SECRET_KEY=change-this-to-a-secure-random-string-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_ALGORITHM=HS256

# CORS (Comma separated list of origins)
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Database (MySQL)
MYSQL_SERVER=mysql
MYSQL_USER=uritomo_user
MYSQL_PASSWORD=uritomo_pass
MYSQL_DB=uritomo
MYSQL_PORT=3306

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Translation & AI Providers
# Options: MOCK, OPENAI, DEEPL
TRANSLATION_PROVIDER=MOCK

# OpenAI Settings (Required if provider is OPENAI)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-5-nano

# DeepL Settings (Required if provider is DEEPL)
DEEPL_API_KEY=

# LiveKit
LIVEKIT_URL=
LIVEKIT_API_KEY=
LIVEKIT_API_SECRET=

# LiveKit Worker (Task 3)
LIVEKIT_BACKEND_URL=http://api:8000
LIVEKIT_ROOM_ID=
LIVEKIT_SERVICE_AUTH=
LIVEKIT_AUTO_SUBSCRIBE=true
LIVEKIT_FORCE_RELAY=false
LIVEKIT_WORKER_ID=livekit_worker
LIVEKIT_WORKER_TOKEN_TTL_SECONDS=0
LIVEKIT_ROOM_EVENTS_CHANNEL=livekit:rooms
LIVEKIT_KO_TRACK=lk.out.ko
LIVEKIT_JA_TRACK=lk.out.ja
LIVEKIT_KO_HZ=320.0
LIVEKIT_JA_HZ=880.0
LIVEKIT_UNKNOWN_LANG_POLICY=none

# OpenAI Realtime (Worker)
OPENAI_REALTIME_MODEL=gpt-realtime
OPENAI_REALTIME_URL=wss://api.openai.com/v1/realtime
OPENAI_REALTIME_TRANSCRIBE_MODEL=gpt-4o-mini-transcribe
OPENAI_REALTIME_VAD_THRESHOLD=0.5
OPENAI_REALTIME_VAD_PREFIX_MS=300
OPENAI_REALTIME_VAD_SILENCE_MS=500
OPENAI_WAKE_PHRASES=하이 에이전트,하이에이전트,ハイエージェント
OPENAI_WAKE_COOLDOWN_SECONDS=2.0

# Worker token
WORKER_SERVICE_KEY=
